<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fl_root"
        android:background="@color/main_add_backgroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MarkDownActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mark_container"
            android:background="@color/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fitsSystemWindows="true"
                app:layout_constraintBottom_toTopOf="@+id/vp_mark_down"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent">


            <ImageView
                    android:id="@+id/mark_down_back"
                    android:src="@drawable/ic_back"
                    android:layout_gravity="start"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"/>


            <TextView
                    android:text="MarkDown"
                    android:fitsSystemWindows="true"
                    android:id="@+id/tv_mark_title"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/mainTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@+id/mark_down_back"
                    android:layout_alignTop="@+id/mark_down_back"/>

        </RelativeLayout>



        <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_mark_down"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/app_guideline2">

        </androidx.viewpager.widget.ViewPager>





        <LinearLayout
                android:background="@drawable/app_shape_save"
                android:layout_width="50dp"
                android:orientation="vertical"
                android:layout_height="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="bottom|center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.92"
                app:layout_constraintVertical_bias="0.0">


            <TextView
                    android:id="@+id/tv_save"
                    android:text="编\n辑"
                    android:gravity="center"
                    android:layout_marginBottom="17sp"
                    android:textColor="@color/windowBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_guideline2"
                app:layout_constraintGuide_percent="0.08"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
            android:id="@+id/fl_util_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/homeHeadColor"
                android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
                android:id="@+id/keyboard_top_view_tip_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/keyboard_top_view_tip_container_height"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:orientation="horizontal">


            <com.tree.newidea.view.AutomaticExpansionLinearLayout
                    android:id="@+id/keyboard_top_view_first_txt"
                    android:background="@drawable/app_shape_utile_bar_item"
                    android:animateLayoutChanges="true"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:minHeight="@dimen/keyboard_top_view_tip_container_height"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:visibility="gone"
                        android:id="@+id/keyboard_top_view_first_txt6"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text="###### "
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/keyboard_top_view_first_txt5"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text="##### "
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/keyboard_top_view_first_txt4"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text="#### "
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/keyboard_top_view_first_txt3"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text="### "
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/keyboard_top_view_first_txt2"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text="## "
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/keyboard_top_view_first_txt1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text="# "
                        android:textSize="14sp"/>


            </com.tree.newidea.view.AutomaticExpansionLinearLayout>


            <com.tree.newidea.view.AutomaticExpansionLinearLayout
                    android:id="@+id/keyboard_top_view_second_txt"
                    android:background="@drawable/app_shape_utile_bar_item"
                    android:animateLayoutChanges="true"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:minHeight="@dimen/keyboard_top_view_tip_container_height"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:visibility="gone"
                        android:id="@+id/keyboard_top_view_second_txt6"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text=">>>>>> "
                        android:textSize="14sp"/>

                <TextView
                        android:visibility="gone"
                        android:id="@+id/keyboard_top_view_second_txt5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text=">>>>> "
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/keyboard_top_view_second_txt4"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text=">>>> "
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/keyboard_top_view_second_txt3"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text=">>> "
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/keyboard_top_view_second_txt2"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text=">> "
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/keyboard_top_view_second_txt1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text="> "
                        android:textSize="14sp"/>

            </com.tree.newidea.view.AutomaticExpansionLinearLayout>


            <com.tree.newidea.view.AutomaticExpansionLinearLayout

                    android:id="@+id/keyboard_top_view_third_txt"
                    android:background="@drawable/app_shape_utile_bar_item"
                    android:animateLayoutChanges="true"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:minHeight="@dimen/keyboard_top_view_tip_container_height"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                <TextView
                        android:visibility="gone"
                        android:id="@+id/keyboard_top_view_third_txt4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text="~~~~"
                        android:textSize="14sp"/>

                <TextView
                        android:visibility="gone"
                        android:id="@+id/keyboard_top_view_third_txt3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text="******"
                        android:textSize="14sp"/>

                <TextView
                        android:visibility="gone"
                        android:id="@+id/keyboard_top_view_third_txt2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text="**"
                        android:textSize="14sp"/>

                <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:id="@+id/keyboard_top_view_third_txt1"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text="****"
                        android:textSize="14sp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/keyboard_top_view_third_txt5"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text="* "
                        android:textSize="14sp"/>

            </com.tree.newidea.view.AutomaticExpansionLinearLayout>


            <com.tree.newidea.view.AutomaticExpansionLinearLayout
                    android:id="@+id/keyboard_top_view_fourth_txt"
                    android:background="@drawable/app_shape_utile_bar_item"
                    android:animateLayoutChanges="true"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:minHeight="@dimen/keyboard_top_view_tip_container_height"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:visibility="gone"
                        android:id="@+id/keyboard_top_view_fourth_txt4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text='![]("")'
                        android:textSize="14sp"/>

                <TextView
                        android:visibility="gone"
                        android:id="@+id/keyboard_top_view_fourth_txt3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text="![]()"
                        android:textSize="14sp"/>


                <TextView
                        android:visibility="gone"
                        android:id="@+id/keyboard_top_view_fourth_txt2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text='[]("")'
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/keyboard_top_view_fourth_txt1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/keyboard_top_view_tip_container_height"
                        android:gravity="center"
                        android:text="[]()"
                        android:textSize="14sp"/>

            </com.tree.newidea.view.AutomaticExpansionLinearLayout>

        </LinearLayout>


    </FrameLayout>


    <FrameLayout
            android:id="@+id/mask_mark"
            android:visibility="gone"
            android:background="@color/main_add_backgroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </FrameLayout>


</FrameLayout>